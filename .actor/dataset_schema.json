      "type": "string",
      "nullable": true,
      "title": "Company Name",
      "description": "Name of the hiring company or employer"
    },
    "category": {
      "type": "string",
      "nullable": true,
      "title": "Job Category",
      "description": "Category classification of the job"
    },
    "location": {
      "type": "string",
      "nullable": true,
      "title": "Location",
      "description": "Job location, typically an emirate or city in UAE"
    },
    "salary": {
      "type": "string",
      "nullable": true,
      "title": "Salary Range",
      "description": "Salary information if provided in the listing"
    },
    "job_type": {
      "type": "string",
      "nullable": true,
