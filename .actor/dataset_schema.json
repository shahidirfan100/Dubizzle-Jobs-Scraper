    },
    "description_text": {
      "type": "string",
      "nullable": true,
      "title": "Description (Text)",
      "description": "Plain text version of the job description"
    },
    "url": {
      "type": "string",
      "nullable": false,
      "title": "Job URL",
      "description": "Direct link to the job listing on Dubizzle"
    }
